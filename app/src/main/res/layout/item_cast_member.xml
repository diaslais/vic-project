<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvCastMemberPicture"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginHorizontal="14dp"
        app:cardCornerRadius="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivCasMemberPicture"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            tools:src="@drawable/ic_launcher_background" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvCastMemberName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/lato"
        android:gravity="center"
        android:text="James \nMangold"
        android:textColor="@color/dark_blue"
        app:layout_constraintEnd_toEndOf="@id/cvCastMemberPicture"
        app:layout_constraintStart_toStartOf="@id/cvCastMemberPicture"
        app:layout_constraintTop_toBottomOf="@+id/cvCastMemberPicture" />

    <TextView
        android:id="@+id/tvCastMemberRole"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lato"
        android:gravity="center"
        android:text="Director"
        android:textColor="@color/light_blue1"
        app:layout_constraintEnd_toEndOf="@id/cvCastMemberPicture"
        app:layout_constraintStart_toStartOf="@id/cvCastMemberPicture"
        app:layout_constraintTop_toBottomOf="@+id/tvCastMemberName" />

</androidx.constraintlayout.widget.ConstraintLayout>

