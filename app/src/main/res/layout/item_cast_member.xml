<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginHorizontal="@dimen/small"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvCastMemberPicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivCasMemberPicture"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            tools:src="@drawable/ic_launcher_background" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvCastMemberName"
        style="@style/BodyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/xxsmall"
        android:ellipsize="end"
        android:gravity="center"
        android:maxWidth="90dp"
        android:singleLine="true"
        android:textColor="@color/dark_blue"
        app:layout_constraintEnd_toEndOf="@id/cvCastMemberPicture"
        app:layout_constraintStart_toStartOf="@id/cvCastMemberPicture"
        app:layout_constraintTop_toBottomOf="@+id/cvCastMemberPicture"
        tools:text="James \nMangold" />

    <TextView
        android:id="@+id/tvCastMemberRole"
        style="@style/BodyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center"
        android:maxWidth="90dp"
        android:singleLine="true"
        android:textColor="@color/light_blue1"
        app:layout_constraintEnd_toEndOf="@id/cvCastMemberPicture"
        app:layout_constraintStart_toStartOf="@id/cvCastMemberPicture"
        app:layout_constraintTop_toBottomOf="@+id/tvCastMemberName"
        tools:text="Director" />

</androidx.constraintlayout.widget.ConstraintLayout>

